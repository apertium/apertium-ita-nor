      </program>
      <program name="apertium-postchunk">
        <file name="apertium-ita-nor.ita-nor.t3x"/>
        <file name="ita-nor.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="ita-nno.autogen.bin"/>
      </program>
    </pipeline>
  </mode>


  <mode name="ita-nor-morph" install="no">
